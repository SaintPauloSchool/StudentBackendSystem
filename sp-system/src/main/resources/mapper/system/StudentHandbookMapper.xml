<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.system.mapper.StudentHandbookMapper">

    <resultMap type="com.sp.system.entity.StudentHandbook" id="StudentHandbookResult">
        <result property="id" column="id"/>
        <result property="subjectTeacher" column="subject_teacher"/>
        <result property="category" column="category"/>
        <result property="title" column="title"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectStudentHandbookVo">
        select id, subject_teacher, category, title, start_time, end_time, content, create_time, update_time
        from sys_student_handbook
    </sql>

    <select id="selectStudentHandbookList" parameterType="com.sp.system.entity.StudentHandbook" resultMap="StudentHandbookResult">
        <include refid="selectStudentHandbookVo"/>
        <where>
            <if test="subjectTeacher != null and subjectTeacher != ''">
                AND subject_teacher like concat('%', #{subjectTeacher}, '%')
            </if>
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
            <if test="title != null and title != ''">
                AND title like concat('%', #{title}, '%')
            </if>
        </where>
        order by create_time desc
    </select>

</mapper>